---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

export interface Props {
  title: string;
  description: string;
  permalink: string;
  current?: string;
  hasBackground?: boolean;
}
const { title, description, permalink, current, hasBackground } = Astro.props;
---
<html lang="en" class="theme-dark">
<head>
  <BaseHead title={title} description={description} permalink={permalink} />
</head>
<body>
  <div class={`layout ${hasBackground && "layout--has-background"}`}>
    <Header current={current} />

    <main>
      <slot />
    </main>

    <Footer />
  </div>
</body>
</html>

<style>
  .layout {
    display: flex;
    flex-direction: column;
    min-height: 100%;
    min-height: 100vh;
  }

  .layout--has-background {
    background-image: url('/public/assets/home-background.webp' );
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center;

    /* darken background to increase contrast of text */
    background-color: rgba(0,0,0,0.5);

    background-blend-mode: multiply;
  }

  main {
    flex: 1;
    position: relative;
    padding: 1em 2em;
    box-sizing: border-box;
    width: 100%;
    display: flex;
    flex-direction: column;

  }
</style>
